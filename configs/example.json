{
    "settings": {
        "port": 8080
    },
    "data": {
        "next_id": 3, 
        "users": [
            {
                "id": 1,
                "first_name": "Mathison",
                "last_name": null
            },
            {
                "id": 2,
                "first_name": "Claude",
                "last_name": "Debussy"
            }
        ]
    },
    "routes": {
        "GET /": {
            "response": "{file('assets/example.html')}",
            "headers": {
                "Content-Type": "text/html"
            }
        },
        "GET /example.js": {
            "response": "{file('assets/example.js')}",
            "headers": {
                "Content-Type": "application/javascript"
            }
        },
        "GET /favicon.ico": {
            "response": "{file('assets/example.ico')}",
            "headers": {
                "Content-Type": "image/x-icon"
            }
        },
        "GET /users": {
            "response": "{data.users}"
        },
        "POST /users": {
            "context": {
                "record": {
                    "id": "{data.next_id}",
                    "first_name": "{body.firstName}",
                    "last_name": "{body.lastName}"
                }
            },
            "actions": [
                "add(data.users, context.record)",
                "inc(data, 'next_id')"
            ],
            "response": "{context.record}"
        },
        "GET /users/:id": {
            "context": "{get('data.users.{params.id}')}",
            "response": {
                "id": "{id}",
                "first_name": "{first_name}",
                "last_name": "{last_name}"
            }
        },
        "GET /test/:X/test": {
            "response": "{params.X}"
        }
    }
}
